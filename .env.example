# 🌟 YanYu Cloud³ AI管理平台 - 环境变量配置模板
# 请复制此文件为 .env.local 并填入实际配置值

# ===============================
# 🌐 公共变量（前端可访问）
# ===============================
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
NEXT_PUBLIC_ENV=development
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_BRAND_NAME=YanYu Cloud³
NEXT_PUBLIC_VERSION=v1.0.0
NEXT_PUBLIC_APP_TITLE=智能业务管理平台
NEXT_PUBLIC_SUPPORT_EMAIL=admin@0379.email

# ===============================
# 🗄️ 数据库配置
# ===============================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=yyc3_management
DB_USER=yyc3_admin
DB_PASSWORD=your_secure_db_password_here
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECT_TIMEOUT=10000
DB_SSL=false

# ===============================
# 📦 Redis 缓存配置
# ===============================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=yyc3_redis
REDIS_DB=0
REDIS_KEY_PREFIX=yyc3:
REDIS_TTL=3600
REDIS_CLUSTER_MODE=false

# ===============================
# 🔐 OpenAI 配置
# ===============================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_ORGANIZATION=your-org-id-here
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30000

# ===============================
# 🔑 认证与安全
# ===============================
JWT_SECRET=9e3416178f9677b1eadb7cc320b4d3e507f943d5be9c9f03d36eceedfad5dedf
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ===============================
# 📧 邮件服务配置
# ===============================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@yanyu.cloud

# ===============================
# 📁 文件存储配置
# ===============================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx
UPLOAD_PATH=./uploads
UPLOAD_PROVIDER=local
UPLOAD_BUCKET=yyc3_uploads
CDN_URL=https://cdn.yanyu.cloud

# ===============================
# 📊 监控与日志
# ===============================
PORT=3001
NODE_ENV=development
LOG_LEVEL=info
LOG_FILE_PATH=./logs
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
SENTRY_DSN=your-sentry-dsn-here
ENABLE_METRICS=true

# ===============================
# 🔄 WebSocket 配置
# ===============================
WS_ENABLED=true
WS_PORT=3001
WS_PATH=/socket.io
WS_CORS_ORIGIN=http://localhost:3000
WS_MAX_CONNECTIONS=1000
WS_PING_TIMEOUT=5000
WS_PING_INTERVAL=25000
WS_RECONNECT_INTERVAL=5000

# ===============================
# 🚀 性能优化
# ===============================
WORKER_THREADS=4
MEMORY_LIMIT=1024
CACHE_DURATION=300
ENABLE_COMPRESSION=true

# ===============================
# 🌍 国际化配置
# ===============================
DEFAULT_LOCALE=zh-CN
SUPPORTED_LOCALES=zh-CN,en-US
TIMEZONE=Asia/Shanghai

# ===============================
# 🔒 安全配置
# ===============================
HELMET_ENABLED=true
HTTPS_ONLY=false
TRUST_PROXY=false
SESSION_SECRET=your-session-secret-here
CSRF_TOKEN_SECRET=your-csrf-secret-here

# ===============================
# 📱 第三方集成
# ===============================
DINGTALK_WEBHOOK=your-dingtalk-webhook-url
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret
ALIYUN_ACCESS_KEY=your-aliyun-access-key
ALIYUN_SECRET_KEY=your-aliyun-secret-key

# ===============================
# 📈 业务配置
# ===============================
CSV_MATCH_TOLERANCE=0.05
RECONCILIATION_EXPORT_FORMAT=pdf
AI_ANALYSIS_ENABLED=true
AI_ANALYSIS_BATCH_SIZE=10
MAX_CONCURRENT_ANALYSES=5
