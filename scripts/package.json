{
  "name": "yanyu-cloud-scripts",
  "version": "1.0.0",
  "description": "YanYu CloudÂ³ deployment and automation scripts",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --config=jest.config.js --testPathPattern=unit",
    "test:integration": "npm run docker:dev && npm run health-check && npm run docker:stop",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "build": "next build",
    "start": "next start",
    "dev": "next dev",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset-db.js",
    "docker:build": "docker build -f scripts/Dockerfile -t yanyu-cloud .",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "deploy:dev": "./deploy.sh development",
    "deploy:staging": "./deploy.sh staging",
    "deploy:prod": "./deploy.sh production",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "backup:db": "./deploy.sh production backup",
    "restore:db": "docker-compose exec -T postgres psql -U postgres -d yanyu_cloud",
    "logs": "docker-compose logs -f",
    "logs:app": "docker-compose logs -f app",
    "logs:db": "docker-compose logs -f postgres",
    "logs:all": "docker-compose logs -f",
    "health-check": "./deploy.sh production health",
    "monitor": "docker stats",
    "shell:app": "docker-compose exec app sh",
    "shell:db": "docker-compose exec postgres psql -U postgres yanyu"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.3.2",
    "pg": "^8.10.0",
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^18.15.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "prettier": "^3.0.0",
    "playwright": "^1.32.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/scripts/test-setup.js"],
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "components/**/*.{js,jsx,ts,tsx}",
      "pages/**/*.{js,jsx,ts,tsx}",
      "app/**/*.{js,jsx,ts,tsx}",
      "lib/**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 120,
    "bracketSpacing": true,
    "arrowParens": "always"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yanyu-cloud/yanyu-cloud.git"
  },
  "keywords": [
    "yanyu-cloud",
    "next.js",
    "react",
    "typescript",
    "docker",
    "ci-cd",
    "deployment"
  ],
  "author": "YanYu Cloud Team",
  "license": "MIT"
}
