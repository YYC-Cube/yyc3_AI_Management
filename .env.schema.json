{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "YanYu Cloud³ 开发环境变量校验",
  "type": "object",
  "properties": {
    "NEXT_PUBLIC_API_BASE_URL": { "type": "string", "format": "uri" },
    "NEXT_PUBLIC_ENV": { "type": "string", "enum": ["development", "production", "test"] },
    "NEXT_PUBLIC_WS_URL": { "type": "string", "format": "uri" },
    "NEXT_PUBLIC_BRAND_NAME": { "type": "string" },
    "NEXT_PUBLIC_VERSION": { "type": "string" },
    "NEXT_PUBLIC_APP_TITLE": { "type": "string" },
    "NEXT_PUBLIC_SUPPORT_EMAIL": { "type": "string", "format": "email" },

    "DB_HOST": { "type": "string" },
    "DB_PORT": { "type": "integer", "minimum": 1 },
    "DB_NAME": { "type": "string" },
    "DB_USER": { "type": "string" },
    "DB_PASSWORD": { "type": "string" },
    "DB_POOL_MAX": { "type": "integer" },
    "DB_POOL_MIN": { "type": "integer" },
    "DB_IDLE_TIMEOUT": { "type": "integer" },
    "DB_CONNECT_TIMEOUT": { "type": "integer" },
    "DB_SSL": { "type": "boolean" },

    "REDIS_HOST": { "type": "string" },
    "REDIS_PORT": { "type": "integer" },
    "REDIS_PASSWORD": { "type": "string" },
    "REDIS_DB": { "type": "integer" },
    "REDIS_KEY_PREFIX": { "type": "string" },
    "REDIS_TTL": { "type": "integer" },
    "REDIS_CLUSTER_MODE": { "type": "boolean" },

    "OPENAI_API_KEY": { "type": "string" },
    "OPENAI_MODEL": { "type": "string" },
    "OPENAI_ORGANIZATION": { "type": "string" },
    "OPENAI_MAX_TOKENS": { "type": "integer" },
    "OPENAI_TEMPERATURE": { "type": "number" },
    "OPENAI_TIMEOUT": { "type": "integer" },

    "JWT_SECRET": { "type": "string" },
    "JWT_EXPIRES_IN": { "type": "string" },
    "JWT_REFRESH_EXPIRES_IN": { "type": "string" },
    "BCRYPT_ROUNDS": { "type": "integer" },
    "CORS_ORIGIN": { "type": "string" },
    "RATE_LIMIT_WINDOW": { "type": "integer" },
    "RATE_LIMIT_MAX": { "type": "integer" },
    "SESSION_SECRET": { "type": "string" },
    "CSRF_TOKEN_SECRET": { "type": "string" },

    "SMTP_HOST": { "type": "string" },
    "SMTP_PORT": { "type": "integer" },
    "SMTP_SECURE": { "type": "boolean" },
    "SMTP_USER": { "type": "string", "format": "email" },
    "SMTP_PASS": { "type": "string" },
    "EMAIL_FROM": { "type": "string", "format": "email" },

    "UPLOAD_MAX_SIZE": { "type": "integer" },
    "UPLOAD_ALLOWED_TYPES": { "type": "string" },
    "UPLOAD_PATH": { "type": "string" },
    "UPLOAD_PROVIDER": { "type": "string" },
    "UPLOAD_BUCKET": { "type": "string" },
    "CDN_URL": { "type": "string", "format": "uri" },

    "PORT": { "type": "integer" },
    "NODE_ENV": { "type": "string", "enum": ["development", "production", "test"] },
    "LOG_LEVEL": { "type": "string", "enum": ["debug", "info", "warn", "error"] },
    "LOG_FILE_PATH": { "type": "string" },
    "PROMETHEUS_PORT": { "type": "integer" },
    "GRAFANA_PORT": { "type": "integer" },
    "SENTRY_DSN": { "type": "string" },
    "ENABLE_METRICS": { "type": "boolean" },

    "WS_ENABLED": { "type": "boolean" },
    "WS_PORT": { "type": "integer" },
    "WS_PATH": { "type": "string" },
    "WS_CORS_ORIGIN": { "type": "string" },
    "WS_MAX_CONNECTIONS": { "type": "integer" },
    "WS_PING_TIMEOUT": { "type": "integer" },
    "WS_PING_INTERVAL": { "type": "integer" },
    "WS_RECONNECT_INTERVAL": { "type": "integer" }
  },
  "required": [
    "NEXT_PUBLIC_API_BASE_URL",
    "NEXT_PUBLIC_ENV",
    "NEXT_PUBLIC_WS_URL",
    "NEXT_PUBLIC_BRAND_NAME",
    "NEXT_PUBLIC_VERSION",
    "NEXT_PUBLIC_APP_TITLE",
    "NEXT_PUBLIC_SUPPORT_EMAIL",
    "DB_HOST",
    "DB_PORT",
    "DB_NAME",
    "DB_USER",
    "DB_PASSWORD",
    "REDIS_HOST",
    "REDIS_PORT",
    "REDIS_PASSWORD",
    "REDIS_DB",
    "OPENAI_API_KEY",
    "JWT_SECRET",
    "JWT_EXPIRES_IN",
    "JWT_REFRESH_EXPIRES_IN",
    "BCRYPT_ROUNDS",
    "CORS_ORIGIN",
    "SMTP_HOST",
    "SMTP_PORT",
    "SMTP_USER",
    "SMTP_PASS",
    "EMAIL_FROM",
    "PORT",
    "NODE_ENV",
    "LOG_LEVEL",
    "WS_ENABLED",
    "WS_PORT"
  ]
}
